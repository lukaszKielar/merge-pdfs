#:kivy 2.0.0

<AppLayout>:
    id: my_widget
    cols: 2
    rows: 1
    
    FileChooserListView:
        id: filechooser
        on_selection: my_widget.selected(filechooser.selection)
        dirselect: True
        path: my_widget.default_path()
        filters: ["*.pdf", ".PDF", ".Pdf"]
    
    Image:
        id: image
        source: ""