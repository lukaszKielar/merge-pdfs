#:kivy 2.0.0

<AppLayout>:
    orientation: "horizontal"

    BoxLayout:
        id: pdf_files
        orientation: "vertical"
        size_hint: (0.5, 1)

    BoxLayout:
        orientation: "vertical"
        size_hint: (0.5, 1)
        
        Image:
            id: pdf_preview
            size_hint: (1, 0.9)
            source: ""

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.1)
            
            Button:
                id: previous_page
                size_hint: (0.5, 1)

                Image:
                    source: "./images/previous.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                id: next_page
                size_hint: (0.5, 1)

                Image:
                    source: "./images/next.png"
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

